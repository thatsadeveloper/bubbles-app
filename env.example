# Copy this file to .env at the project root and adjust values for local development.

# Database (Spring DataSource)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/bubbles
SPRING_DATASOURCE_USERNAME=bubbles
SPRING_DATASOURCE_PASSWORD=bubbles

# Redis
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# JWT
JWT_SECRET=dev-secret-change-me

# Mail (Spring Mail)
SPRING_MAIL_HOST=
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=
SPRING_MAIL_PASSWORD=
SPRING_MAIL_SMTP_AUTH=true
SPRING_MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_FROM=noreply@yourdomain

# Frontend base URL for deep links in emails
FRONTEND_BASE_URL=http://localhost:3000

# Google OAuth exchange shared secret (shared with frontend server)
GOOGLE_EXCHANGE_SECRET=

# Audio storage for TTS
AUDIO_STORAGE_DIR=
